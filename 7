#include <stdio.h>
#include <stdlib.h>
#include <string.h>
struct node {
    char usn[20], name[50], branch[20];
    int sem;
    long long phno;
    struct node *link;
};
struct node *first = NULL, *last = NULL;
int count = 0;
struct node* create() 
{
    struct node *temp;
    temp = (struct node*)malloc(sizeof(struct node));
    printf("Enter USN Name Branch Sem Phone:\n");
    scanf("%s %s %s %d %lld",temp->usn, temp->name, temp->branch,&temp->sem, &temp->phno);
    temp->link = NULL;
    count++;
    return temp;
}
void insert_front() 
{
    struct node *temp = create();
    if (first == NULL)
        first = last = temp;
    else 
    {
        temp->link = first;
        first = temp;
    }
}
void insert_rear() 
{
    struct node *temp = create();
    if (first == NULL)
        first = last = temp;
    else {
        last->link = temp;
        last = temp;
    }
}
void delete_front() 
{
    struct node *p;
    if (first == NULL) {
        printf("List empty\n");
        return;
    }
    p = first;
    first = first->link;
    printf("Deleted %s\n", p->usn);
    free(p);
    count--;
}
void delete_rear() 
{
    struct node *p, *q;
    if (first == NULL) 
    {
        printf("List empty\n");
        return;
    }
    if (first->link == NULL) 
    {
        printf("Deleted %s\n", first->usn);
        free(first);
        first = last = NULL;
    } else 
    {
        q = first;
        while (q->link != last)
            q = q->link;
        p = last;
        q->link = NULL;
        last = q;
        printf("Deleted %s\n", p->usn);
        free(p);
    }
    count--;
}
void display() 
{
    struct node *p;
    if (first == NULL) 
    {
        printf("List empty\n");
        return;
    }
    p = first;
    while (p != NULL) 
    {
        printf("%s %s %s %d %lld\n",
               p->usn, p->name, p->branch,
               p->sem, p->phno);
        p = p->link;
    }
    printf("Total students = %d\n", count);
}
int main() 
{
    int ch;
    while (1) 
    {
        printf("\n1.Insert Front\n2.Insert Rear\n3.Delete Front\n4.Delete Rear\n5.Display\n6.Exit\n");
        printf("Enter choice: ");
        scanf("%d", &ch);
        switch (ch) 
        {
            case 1: insert_front(); break;
            case 2: insert_rear(); break;
            case 3: delete_front(); break;
            case 4: delete_rear(); break;
            case 5: display(); break;
            case 6: exit(0);
            default: printf("Invalid choice\n");
        }
    }
}
