#include <stdio.h>
void tower(int n, char src, char dest, char aux) {
    if (n == 0) return; 
    tower(n - 1, src, aux, dest);
    printf("Move disk %d from %c to %c\n", n, src, dest);
    tower(n - 1, aux, dest, src);
}
int main() {
    int n;
    printf("Enter the number of disks: ");
    scanf("%d", &n);
    printf("\nThe moves involved are:\n");
    tower(n, 'A', 'C', 'B'); 
    return 0;
}
